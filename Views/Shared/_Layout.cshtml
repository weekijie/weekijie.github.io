@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
        content="Portfolio of Wee Ki Jie - Software Developer specializing in .NET, Python, and enterprise applications" />
    <meta name="author" content="Wee Ki Jie" />
    <meta name="theme-color" content="#0077b5" />
    <title>@ViewData["Title"] - Wee Ki Jie | Portfolio</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://weekijie.dev/" />
    <meta property="og:title" content="Wee Ki Jie - Software Developer Portfolio" />
    <meta property="og:description"
        content="Forward-thinking developer with a passion for AI and Machine Learning, backed by a strong background in enterprise-grade engineering." />
    <meta property="og:image" content="https://avatars.githubusercontent.com/u/weekijie" />
    <meta property="og:site_name" content="Wee Ki Jie Portfolio" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://weekijie.dev/" />
    <meta name="twitter:title" content="Wee Ki Jie - Software Developer Portfolio" />
    <meta name="twitter:description"
        content="Forward-thinking developer with a passion for AI and Machine Learning, backed by a strong background in enterprise-grade engineering." />
    <meta name="twitter:image" content="https://avatars.githubusercontent.com/u/weekijie" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://weekijie.dev/" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Person",
        "name": "Wee Ki Jie",
        "url": "https://weekijie.dev",
        "jobTitle": "Software Developer",
        "worksFor": {
            "@@type": "Organization",
            "name": "Cognizant"
        },
        "alumniOf": {
            "@@type": "EducationalOrganization",
            "name": "Nanyang Polytechnic"
        },
        "sameAs": [
            "https://github.com/weekijie",
            "https://www.linkedin.com/in/wee-ki-jie-b82336209/"
        ],
        "knowsAbout": ["C#", "ASP.NET Core", "Python", "JavaScript", "Microsoft Dynamics 365"]
    }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    @await RenderSectionAsync("Styles", required: false)
</head>


<body>
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="nav-logo">
                <span class="logo-text">kijie.</span>
            </a>
            <button class="hamburger" id="hamburger" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="nav-links">
                <a href="#about" class="nav-link">about</a>
                <a href="#experience" class="nav-link">experience</a>
                <a href="#projects" class="nav-link">projects</a>
                <a href="#contact" class="nav-link">contact</a>
            </div>
            <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
                <i class="fas fa-moon"></i>
            </button>
        </div>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-links">
                <a href="https://www.linkedin.com/in/weekijie/" target="_blank" rel="noopener" aria-label="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="https://github.com/weekijie" target="_blank" rel="noopener" aria-label="GitHub">
                    <i class="fab fa-github"></i>
                </a>
                <a href="mailto:kijiejob@gmail.com" aria-label="Email">
                    <i class="fas fa-envelope"></i>
                </a>
            </div>
            <p class="footer-text">&copy; @DateTime.Now.Year kijie. All rights reserved.</p>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button class="back-to-top" id="backToTop" aria-label="Back to top">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Image Lightbox -->
    <div class="lightbox" id="lightbox">
        <button class="lightbox-close" aria-label="Close lightbox">&times;</button>
        <img id="lightbox-img" src="" alt="" />
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- EmailJS SDK -->
    <script src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@4/dist/email.min.js"></script>
    <script>
        // EmailJS initialization - configure these in appsettings.Production.json or environment variables
        const EMAILJS_PUBLIC_KEY = '@Configuration["EmailJS:PublicKey"]';
        const EMAILJS_SERVICE_ID = '@Configuration["EmailJS:ServiceId"]';
        const EMAILJS_TEMPLATE_ID = '@Configuration["EmailJS:TemplateId"]';

        if (EMAILJS_PUBLIC_KEY && EMAILJS_PUBLIC_KEY !== '') {
            emailjs.init(EMAILJS_PUBLIC_KEY);
        }

        document.getElementById('contactForm')?.addEventListener('submit', async function (e) {
            e.preventDefault();

            const form = this;
            const btnText = form.querySelector('.btn-text');
            const btnLoading = form.querySelector('.btn-loading');
            const statusDiv = document.getElementById('formStatus');

            // Check if EmailJS is configured
            if (!EMAILJS_PUBLIC_KEY || EMAILJS_PUBLIC_KEY === '') {
                statusDiv.innerHTML = '<span class="status-error">Contact form not configured. Please email directly.</span>';
                return;
            }

            // Show loading state
            btnText.style.display = 'none';
            btnLoading.style.display = 'inline-flex';
            statusDiv.innerHTML = '';

            try {
                await emailjs.sendForm(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, form);
                statusDiv.innerHTML = '<span class="status-success"><i class="fas fa-check-circle"></i> Message sent successfully!</span>';
                form.reset();
            } catch (error) {
                console.error('EmailJS error:', error);
                statusDiv.innerHTML = '<span class="status-error"><i class="fas fa-exclamation-circle"></i> Failed to send. Please try again or email directly.</span>';
            } finally {
                btnText.style.display = 'inline-flex';
                btnLoading.style.display = 'none';
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>